<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="text-center">Perpustakaan</h1>

      <form id="addBookForm" class="my-4">
        <div class="input-group">
          <input
            type="text"
            id="newBookName"
            class="form-control"
            placeholder="Masukkan nama buku baru..."
            required
          />
          <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Tambah Buku</button>
          </div>
        </div>
      </form>

      <ul id="bookList" class="list-group">
        <% books.forEach(book => { %>
        <li
          class="list-group-item d-flex justify-content-between align-items-center"
        >
          <span><%= book.nama_buku %></span>
          <div>
            <button
              class="btn btn-sm btn-success mr-2 editBtn"
              data-id="<%= book.id %>"
              data-name="<%= book.nama_buku %>"
            >
              Edit
            </button>
            <button
              class="btn btn-sm btn-danger deleteBtn"
              data-id="<%= book.id %>"
            >
              Delete
            </button>
          </div>
        </li>
        <% }); %>
      </ul>

      <div
        id="editModal"
        class="modal fade"
        tabindex="-1"
        role="dialog"
        aria-labelledby="editModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="editModalLabel">Edit Nama Buku</h5>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form id="editTodoForm">
                <div class="form-group">
                  <label for="editBookName">Nama Buku</label>
                  <input
                    type="text"
                    id="editBookName"
                    class="form-control"
                    required
                  />
                </div>
                <button type="submit" class="btn btn-primary mt-3">
                  Save Changes
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap 4 JS + Popper -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
      $(document).ready(function () {
        let editId;

        $("#addBookForm").on("submit", function (e) {
          e.preventDefault();
          const bookName = $("#newBookName").val().trim();
          if (bookName) {
            $.ajax({
              url: "/api/books",
              type: "POST",
              contentType: "application/json",
              data: JSON.stringify({ nama_buku: bookName }),
              success: function () {
                location.reload();
              },
              error: function (error) {
                console.error("Error adding task:", error.responseText);
              },
            });
          }
        });

        $(".deleteBtn").on("click", function () {
          const id = $(this).data("id");
          $.ajax({
            url: "/api/books" + id,
            type: "DELETE",
            success: function () {
              location.reload();
            },
          });
        });

        $(".editBtn").on("click", function () {
          editId = $(this).data("id");
          const currentName = $(this).data('name');
          $("#editBookName").val(currentName);
          $("#editModal").modal("show");
        });

        $("#editBookForm").on("submit", function (e) {
          e.preventDefault();
          const newName = $("#editBookName").val().trim();
          if (newName) {
            $.ajax({
              url: "/api/books" + editId,
              type: "PUT",
              data: JSON.stringify({ nama_buku: newName}),
              contentType: "application/json",
              success: function () {
                location.reload();
              },
            });
          }
        });
      });
    </script>
  </body>
</html>